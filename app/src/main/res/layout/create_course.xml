<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Name:"
            android:id="@+id/TvCourseName"


            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Enter Course Name"
            android:id="@+id/CourseName"


            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Course Code:"
            android:layout_weight="0.25"
            android:id="@+id/TvCourseCode"
            >

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Class Size:"
            android:layout_weight="0.25"
            android:id="@+id/TvClassSize"
            android:inputType="number"
            android:layout_toRightOf="@+id/TvCourseCode"
            >

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Course Code"
            android:layout_weight="0.25"
            android:id="@+id/CourseCode"
            >

        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Class Size"
            android:layout_weight="0.25"
            android:id="@+id/ClassSize"
            android:inputType="number"
            >

        </EditText>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/TvCourseDateStart"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.125"
            android:text="Date Start"
            android:focusableInTouchMode="false">

        </TextView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.125"


            >

        </TextView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.125"
            android:id="@+id/TvCourseDateEnd"
            android:text="Date End"

            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.125"
            >

        </TextView>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <EditText
            android:id="@+id/CourseDateStart"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.125"
            android:hint="Date Start"


            android:textIsSelectable="true"
            android:focusable="false"

            android:focusableInTouchMode="false">

        </EditText>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.125"
            android:text ="Select Date"
            android:id="@+id/Btn_CourseDateStart"
            >

        </Button>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="Date End"
            android:layout_weight="0.125"
            android:id="@+id/CourseDateEnd"
            android:focusableInTouchMode="false"

            android:inputType="none"
            android:textIsSelectable="true"
            android:focusable="false"

            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.125"
            android:text ="Select Date"
            android:id="@+id/Btn_CourseDateEnd"
            >

        </Button>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text ="Course Description">

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="Enter Course Description"
        android:id="@+id/CourseDescription"
        >

    </EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="BtnValidate"
        android:text="Create Course"

        />
</LinearLayout>